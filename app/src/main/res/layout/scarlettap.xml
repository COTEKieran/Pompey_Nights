<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/whitetopurple">

    <ImageView
        android:id="@+id/smokingArea"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="200dp"
        app:srcCompat="@drawable/smokingarea" />

    <include
        layout= "@layout/toolbar"
        />

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="335dp"
        android:fontFamily="@font/rockwell"
        android:gravity="center"
        android:text="Scarlet Tap"
        android:textColor="?attr/purpletogrey"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/addressOfVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="359dp"
        android:fontFamily="@font/rockwell"
        android:text="80-82 Palmerston Rd, Southsea, Portsmouth PO5 3PT"
        android:textColor="?attr/purpletogrey" />

    <RatingBar
        android:id="@+id/venueRating"
        style="@android:style/Widget.Holo.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:numStars="5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:progressBackgroundTint="@color/darkgrey"
        android:progressTint="@color/mainPurple"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="106dp"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="67dp"
        android:background="@color/mainPurple"
        android:fontFamily="@font/rockwell"
        android:lines="18"
        android:padding="10dp"
        android:text="Opening Times:
            \n\nMonday
            \n\nTuesday
            \n\nWednesday
            \n\nThursday
            \n\nFriday
            \n\nSaturday
            \n\nSunday"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="102dp"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="67dp"
        android:background="@color/mainPurple"
        android:fontFamily="@font/rockwell"
        android:padding="10dp"
        android:text="
        \n\n12-10pm
        \n\n12-10pm
        \n\n12-10pm
        \n\n12-10pm
        \n\n12-10pm
        \n\n12-10pm
        \n\n12-10pm"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/phone" />

    <TextView
        android:id="@+id/phoneSymbol"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/rockwell"
        android:text="023 9289 1340"
        android:textColor="?attr/purpletogrey"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/internetLink"
        android:layout_width="61dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        app:srcCompat="@drawable/internet" />

    <ImageView
        android:id="@+id/facebookLink"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="13dp"
        android:clickable="true"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/mask"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/mask" />

    <ImageView
        android:id="@+id/disabled"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="140dp"
        app:srcCompat="@drawable/disabled" />


    <ImageView
        android:id="@+id/wifi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/wifi" />

    <ImageView
        android:id="@+id/mapIcon"
        android:layout_width="73dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="218dp"
        app:srcCompat="@drawable/mapicon" />
    <ImageView
        android:id="@+id/television"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="200dp"
        app:srcCompat="@drawable/television" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="219dp"
        android:fontFamily="@font/rockwell"
        android:text="Click to locate this \nvenue on  a map"
        android:textColor="?attr/purpletogrey" />

</RelativeLayout>