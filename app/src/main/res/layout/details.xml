<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/venueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/rockwell"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:textColor="@color/darkgrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconView3"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iconView2"
                android:layout_width="53dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"/>

            <ImageView
                android:id="@+id/iconView1"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"
                />
            <ImageView
                android:id="@+id/feature1"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"/>
            <ImageView
                android:id="@+id/feature2"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"/>
            <ImageView
                android:id="@+id/feature3"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"/>
            <ImageView
                android:id="@+id/feature4"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"/>
            <ImageView
                android:id="@+id/feature5"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"/>

            <ImageView
                android:id="@+id/feature6"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="5dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <TextView
            android:id="@+id/venueAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/rockwell"
            android:gravity="center"
            android:textColor="@color/darkgrey"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>

